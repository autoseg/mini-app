<div class='row text-center mb-4'>
  <div class='col-md-12'>
    <h2>Task Board</h2>
    <% if params[:search] %>
      <p><%= "#{@tasks.size} Results Found" %></p>
    <% end %>
  </div>
</div>

<!-- Order Tabs -->
<div class='row justify-content-md-center mb-4'>
  <ul class="nav nav-tabs">
    <% @order_options.each do |order| %>
      <li class="nav-item">
        <%= link_to order.titleize, tasks_path(order_tasks: order), class: ((params[:order_tasks] == order) ? "nav-link active" : "nav-link") %>
      </li>
    <% end %>
  </ul>
</div>

<!-- Tasks -->
<% @tasks.each do |task| %>
  <%= render 'tasks/task', task: task %>
<% end %>